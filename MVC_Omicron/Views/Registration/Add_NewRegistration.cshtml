@model MVC_Omicron.Models.Register
    @using MVC_Omicron.Views.Shared

<div class="table">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <h4>@SiteResource.RegisternewStudent</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.LabelFor(model => model.StudentID, SiteResource.StudentName , htmlAttributes: new { @class = "control-label col-md-2", id = "studentID" })

        @Html.DropDownListFor(m => m.StudentID, new SelectList(ViewBag.Students, "StudentID", "StudentName") ,new { @class = "dropdownlist" })
        @Html.ValidationMessageFor(model => model.StudentID,"", new { @class = "text-danger" })

        <br />
        @Html.LabelFor(model => model.CourseID, SiteResource.CourseName, htmlAttributes: new { @class = "control-label col-md-2" })
        <br />
        @Html.DropDownListFor(m => m.CourseID, new SelectList(ViewBag.Courses, "CourseID", "CourseName"), new { @class = "dropdownlist", id = "courseID" })
        @Html.ValidationMessageFor(model => model.CourseID, "", new { @class = "text-danger" })
        <br />
        <br />
        @Html.LabelFor(model => model.StudentFees, SiteResource.StudentFees, htmlAttributes: new { @class = "control-label col-md-2" })

        @Html.Label("-----", new { id = "fees" })
        <br />
        <br />
        <input type="submit" value="@SiteResource.save" class="btn" />
        <a href='@Url.Action("RegistrationList", "Registration")' class="btn">@SiteResource.cancel</a>


        <script>
            $("#courseID").change(function () {
                var v = $(this).val();
                if (v == 1)
                    $("#fees").text(20);
                else if (v == 2)
                    $("#fees").text(40);
                else
                    $("#fees").text(60);
            });
        </script>
        

    }
</div>