@model MVC_Omicron.Models.Register
@using MVC_Omicron.Views.Shared
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


<div class="table">
    <h3>@SiteResource.EditRegisteredCourse</h3>
    <hr />
    @*<h4>@Model.StudentName is registered in @Model.CourseName course</h4>*@
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <h5> @Html.LabelFor(model => model.StudentName, SiteResource.StudentName): @Html.DisplayFor(model => model.StudentName) </h5>
    <h5>
        @Html.LabelFor(model => model.CourseName, SiteResource.CourseName):
        @Html.DisplayFor(model => model.CourseName)
    </h5>


    <h5> @Html.LabelFor(model => model.RegisterDate, SiteResource.RegisterDate): @Html.DisplayFor(model => model.RegisterDate) </h5>
    <h5>
        @Html.LabelFor(model => model.StudentFees, SiteResource.StudentFees):
        @Html.DisplayFor(model => model.StudentFees)
    </h5>

    

    <br />
    @Html.HiddenFor(model => model.StudentID)
    @Html.HiddenFor(model => model.EnrollmentID)
    <h4>@SiteResource.Selectcourse:</h4>
    @Html.DropDownListFor(m => m.CourseID, new SelectList(ViewBag.Courses, "CourseID", "CourseName"), new { @class = "dropdownlist", id = "courseID" })
    @Html.ValidationMessageFor(model => model.CourseID, "", new { @class = "text-danger" })
    <br />
    @Html.LabelFor(model => model.StudentFees, SiteResource.StudentFees)

    @Html.Label("-----", new { id = "fees" })
    <br />
    <br />
    <script>
        $("#courseID").change(function () {
            var v = $(this).val();
            if (v == 1)
                $("#fees").text(20);
            else if (v == 2)
                $("#fees").text(40);
            else
                $("#fees").text(60);
        });
    </script>


    <input type="submit" value="@SiteResource.save" class="btn" />
    <a href='@Url.Action("RegistrationList", "Registration")' class="btn">@SiteResource.cancel</a>

</div>


}